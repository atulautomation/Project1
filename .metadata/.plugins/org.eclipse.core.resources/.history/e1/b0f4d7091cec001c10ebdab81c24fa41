package ProducerConsumer;

public class Shop 
{
	int sugar=10;
	public synchronized void Producer() 
	{
		if(sugar>=20)
			try {
				wait();
			} catch (InterruptedException e) {
				// TODO Auto-generated catch block
				e.printStackTrace();
			}
		sugar++;
			
		
	}
	public synchronized void Consumer() 
	{
		
		
			
			if(sugar>=10)
			try {
				wait();
			} catch (InterruptedException e)
			{
				// TODO Auto-generated catch block
				e.printStackTrace();
			}
			
		sugar--;
	}
}
